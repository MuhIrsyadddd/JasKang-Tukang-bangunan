<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pembayaran">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Silahkan Pilih salah satu Bank di bawah"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/containerBanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textTitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/bca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bank_background"
            android:text="Hanya menerima \ntransfer dari bank BCA"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/bri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bank_background"
            android:text="Hanya menerima \ntransfer dari bank BRI"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/bni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bank_background"
            android:text="Hanya menerima \ntransfer dari bank BNI"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/mandiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bank_background"
            android:text="Hanya menerima \ntransfer dari bank MANDIRI"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</RelativeLayout>
